{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/login.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block title %}Registrate{% endblock %}

{% block body %}
    <div id="body">
        <div class="container vCenter">
            <form class="p-3" id="formRegistro" action="{{ path('verificar') }}" method="post" novalidate>
                <h3>Registrate en MonBarter</h3>
                <div class="form-row">
                    <div class="col-12 mb-3">
                        <label for="nombre">Nombre de usuario <span>*</span></label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="" placeholder="Nombre de Usuario"
                            required>
                    </div>
                    <div class="col-12 mb-3">
                        <label for="email">Cuenta de Email <span>*</span></label>
                        <input type="email" class="form-control" id="email" name="email" value="" placeholder="Cuenta de Email" required>
                    </div>
                    <div class="col-12 mb-3">
                        <label for="contrasena">Contraseña <span>*</span></label>
                        <input type="password" class="form-control" id="contrasena" name="contrasena" value="" placeholder="Contraseña"
                            required>
                    </div>
                    <div class="col-12 mb-3">
                        <label for="confContrasena">Confirmación de la Contraseña <span>*</span></label>
                        <input type="password" class="form-control" id="confContrasena" name="confContrasena" value=""
                            placeholder="Confirmar contraseña" required>
                    </div>
                    <div class="col-12 mb-3">
                        <select class="form-control" name="provincias" id="provincias">
                            <option value="0" disabled selected>Escoge una provincia</option>
                            {% for provincia in provincias %}
                                <option value="{{ provincia.id }}"> {{ provincia.provincia }} </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="condiciones" required>
                                <label class="form-check-label" for="condiciones">
                                    Aceptar condiciones de uso y privacidad
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error }}
                    </div>
                {% endif %}
                <div class="row">
                    <div class="col-6">
                        <button class="btn" type="submit">Crear cuenta</button>
                    </div>
                    <div class="col-6">
                        <a class="btn" href="{{ path('app_login')}}">Iniciar sesión</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/validatorRegister.js') }}"></script>
{% endblock %}