{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/publicaciones.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block body %}
<div id="body">
    <div class="container">
        <div class="row d-flex">
            <div class="col-12 mt-5">
                <div class="card mb-3">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for imagen in publicacion.imagenes %}
                                {% if imagen == publicacion.imagenes['imagen1'] %}
                                <div class="carousel-item active">
                                    <img class="card-img-top principal d-block w-100" src="{{ asset(imagen) }}">
                                </div>
                                {% else %}
                                <div class="carousel-item">
                                    <img class="card-img-top principal d-block w-100" src="{{ asset(imagen) }}">
                                </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Anterior</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ publicacion.titulo }}</h5>
                        <p class="card-text">{{ publicacion.descripcion }}</p>
                        <a href="{{ path('perfil' , {id:publicacion.usuario.id})}}" class="btn btn-primary btn-lg btn-block">Me interesa</a>
                    </div>
                    <div class="card-footer text-muted">
                        <small>{{publicacion.fechaPublicacion | date ('d-m-y  H:i') }}
                        </small>
                        <img class="imgSmall" src="{{ asset(publicacion.usuario.imagenPerfil) }}" alt="Card image cap">
                        <a class="correo" href="{{ path('perfil' , {id:publicacion.usuario.id})}}" class="card-link">{{ publicacion.usuario.email }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
